<div class="sign_up_container">
    <div class="sign_up_title"> Sign UP</div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html:{class:"sign_up_form"}) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="sign-field">
      <%= f.text_field :name, placeholder:"username.." %>
    </div>

    <div class="sign-field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"email" %>
    </div>

    <div class="sign-field">
      <%= f.password_field :password, autocomplete: "new-password",placeholder:"password.." %>
    </div>

    <div class="sign-field">
      <%= f.password_field :password_confirmation,placeholder:"confirm password" ,autocomplete: "new-password" %>
    </div>

    <div class="sign-field">
        <%= f.file_field :profile_pic %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class:"sign_in" %>
    </div>
  <% end %>

</div>