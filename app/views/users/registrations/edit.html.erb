<h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>

<div class="profile-container">
  <div class="profile-pic">
    <% if current_user.profile_pic.attached? %>
      <%= image_tag current_user.profile_pic.variant(resize_to_limit: [300, 300]), class: "profile-image" %>
    <% else %>
      <div class="default-profile">No Image</div>
    <% end %>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-container" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input-field" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "input-field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="info-message">
      Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, class: "input-field" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "input-field" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(required to confirm your changes)</i>
    <%= f.password_field :current_password, class: "input-field" %>
  </div>

  <div class="form-group">
    <%= f.label :profile_pic, "Change Profile Picture" %>
    <%= f.file_field :profile_pic, class: "file-input" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Update Profile", class: "submit-btn" %>
  </div>
<% end %>

<h3 class="delete-title">Cancel My Account</h3>
<p class="delete-text">Unhappy? You can delete your account below.</p>
<div class="delete-container">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "delete-btn" %>
</div>

<%= link_to "Back", :back, class: "back-link" %>
