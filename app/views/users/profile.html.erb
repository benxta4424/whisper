<div class="profile_container">
        <div class="profile_pic_container">
                <%= image_tag current_user.profile_pic.variant(resize_to_limit: [300, 300]), class: "cruser_profile_pic" %>
                <div class="change_profile_picture">
                        <div class="change_picture_form">
                                <%= form_with url:user_registration_path do |f| %>
                                        <%= f.label :profile_pic,"Change Picture" %>
                                        <%= f.file_field :profile_pic %>
                                        <%= f.submit "Change" %>
                                <% end %>
                        </div>
                </div>
        </div>
</div>