<div class="user_post">
    <div class="curr_user"> <%= post.user.name %> </div>
    <div class="post_title">
        <div class="post_content"><%= post.title %></div>
        
        <div class="post_links">
            <% if current_user.likes.exists?(post_id:post.id) %>
                <div class="like_post">Liked</div>
            <% else %>
                <div data-controller="like">
                    <div data-action="click->like#after_click" class="like_post"><%= link_to "Like"%></div>
                </div>
            <% end %>
            <div class="comment_post">Comment</div>
            <div class="share_post">Share</div>
        </div>
    </div>
</div>
