<%= turbo_frame_tag "new_post" do %>
  <%= form_with url:user_posts_path, method: :post do |f| %>
    <%= f.text_area :title, name: "post[title]", placeholder: "#{current_user.name} share your thoughts..", value:" ",class: "add_post_input" %>
    <%= f.submit "Post", class: "add_post_button" %>
  <% end %>
<% end %>