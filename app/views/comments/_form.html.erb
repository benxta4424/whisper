<%= turbo_frame_tag "comment_content_#{params[:post_id]}" do %>
<%= form_with model: Comment.new, url: post_comments_path(params[:post_id]), method: :post do |form| %>
      <%= form.hidden_field :user_id,value:current_user.id %>
      <%= form.hidden_field :post_id,value:post %>
      <%= form.text_field :content %>
      <%= form.submit "Add Comment" %>
  <% end %>
<% end %>
